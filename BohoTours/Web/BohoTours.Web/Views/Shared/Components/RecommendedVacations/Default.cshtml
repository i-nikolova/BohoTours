@model IEnumerable<BohoTours.Web.ViewModels.Vacations.VacationInListViewModel>

<div class="widget widget-latest-post">
    <div class="widget-title">
        <h3>We recommend</h3>
    </div>
    <div class="widget-body">
        @foreach (var vacation in Model)
        {
            <div class="latest-post-aside media">
                <div class="lpa-left media-body">
                    <div class="lpa-title">
                        <h5><a asp-action="Details" asp-route-id="@vacation.Id">@vacation.Name</a></h5>
                    </div>
                    <div class="lpa-meta">
                        <a class="name" asp-action="All" asp-route-country="@vacation.CountryId">
                            @vacation.TownsVisited, @vacation.CountryName
                        </a>
                    </div>
                </div>
                <div class="lpa-right">
                    <a asp-action="Details" asp-route-id="@vacation.Id">
                        <img src="@vacation.ImagePath" title="" alt="">
                    </a>
                </div>
            </div>
        }
    </div>
</div>